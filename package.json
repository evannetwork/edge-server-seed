{
  "author": "evan GmbH",
  "dependencies": {
    "@evan.network/api-blockchain-core": "^2.2.0",
    "@evan.network/smart-contracts-core": "^2.1.0",
    "actionhero": "^19.1.0",
    "env-cmd": "^7.0.0",
    "fakeredis": "latest",
    "ioredis": "latest",
    "node-schedule": "^1.3.2",
    "web3": "1.0.0-beta.37",
    "ws": "latest"
  },
  "description": "evan.network edge server",
  "devDependencies": {
    "chai": "latest",
    "cross-env": "latest",
    "dirty-chai": "latest",
    "mocha": "latest",
    "standard": "latest",
    "cp-cli": "latest"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "license": "Apache-2.0",
  "name": "@evan.network/edge-server-seed",
  "scripts": {
    "actionhero": "env-cmd ./.env.local actionhero",
    "debug": "env-cmd ./.env.local node --inspect --preserve-symlinks ../../actionhero/bin/actionhero",
    "debugbrk": "env-cmd ./.env.local node --inspect-brk --preserve-symlinks ../../actionhero/bin/actionhero",
    "postinstall": "npx cp-cli ../smart-contracts-core/config/smart-contracts-core.js config/ && npx mkdirp node_modules/@evan.network && cd node_modules/\\@evan.network && ln -sf ../../../smart-contracts-core smart-contracts-core",
    "pretest": "env-cmd ./.env.local standard",
    "start": "env-cmd ./.env.local node --preserve-symlinks ../../actionhero/bin/actionhero",
    "test": "env-cmd ./.env.local cross-env NODE_ENV=test mocha"
  },
  "standard": {
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ],
    "ignore": [
      "public/javascript/ActionheroWebsocketClient.*"
    ]
  },
  "version": "1.6.0"
}
